@page
@using SNGCommon.Resources
@model ProgressTracker.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div id="login" class="section">
    <div asp-validation-summary="ModelOnly" class="notification is-danger">
        <button class="delete"></button>
    </div>
    <form method="post">
        <div class="card">
            <div class="card-content">
                <p class="title">Login</p>
                <div class="input-field">
                    <input asp-for="Email" class="validate" placeholder="@nameof(Model.Email)">
                    <span asp-validation-for="Email" class="help is-danger"></span>
                </div>
                <div class="input-field">
                    <input asp-for="Password" class="validate" placeholder="@nameof(Model.Password)">
                    <span asp-validation-for="Password" class="help is-danger"></span>
                </div>
                <button type="submit" class="btn waves-effect waves-light">@Translation.Login</button>
            </div>
        </div>
    </form>
</div>




