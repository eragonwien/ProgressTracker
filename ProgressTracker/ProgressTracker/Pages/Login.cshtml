@page
@using SNGCommon.Resources
@using Microsoft.AspNetCore.Authentication.Google;
@model ProgressTracker.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div id="login" class="section">
    <div asp-validation-summary="ModelOnly" class="notification is-danger">
        <button class="delete"></button>
    </div>
    <form method="post">
        <div class="card">
           <div class="card-content">
              <p class="title">Login</p>
              <div class="input-field">
                 <input asp-for="Email" class="validate" placeholder="@nameof(Model.Email)">
                 <span asp-validation-for="Email" class="helper-text red-text"></span>
              </div>
              <div class="input-field">
                 <input asp-for="Password" class="validate" placeholder="@nameof(Model.Password)">
                 <span asp-validation-for="Password" class="helper-text red-text"></span>
              </div>
              <button type="submit" class="btn waves-effect waves-light">@Translation.Login</button>
              <a asp-page-handler="external" asp-route-provider="@GoogleDefaults.AuthenticationScheme" class="btn waves-effect waves-light red">@Translation.Login Google</a>
           </div>
        </div>
    </form>
</div>




