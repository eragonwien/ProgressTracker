@model ProgressTracker.Models.Ptproject
@using ProgressTracker.Services;
@using Microsoft.AspNetCore.Mvc.Localization
@using SNGCommon.Resources

@inject IHtmlLocalizer<SNGCommon.Resources.Translation> localizer

<form method="post">
   <input type="hidden" asp-for="Id" />
   <div class="modal-content">
      <div class="row">
         <div class="input-field">
            <input asp-for="Name" class="validate focus-first" />
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="helper-text red-text"></span>
         </div>
      </div>
      <div class="row">
         <div class="input-field">
            <input asp-for="Description" class="validate" />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="helper-text red-text"></span>
         </div>
      </div>
   </div>
   <div class="modal-footer">
      <button type="submit" asp-page="project" asp-page-handler="edit" asp-route-returnurl="@Context.Request.Path" class="btn black waves-effect waves-light">
         <i class="material-icons left">save</i>
         <span class="white-text">@localizer[Translation.SaveChanges]</span>
      </button>
   </div>
</form>