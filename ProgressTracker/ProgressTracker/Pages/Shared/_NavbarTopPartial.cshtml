@using ProgressTracker.Services
@using SNGCommon.Common
@model ProgressTracker.Models.TopNavbarViewModel
<nav role="navigation" aria-label="main navigation">
   <div class="nav-wrapper black">
      <a href="" data-target="sidenav" class="sidenav-trigger right"><i class="material-icons">menu</i></a>
      <a href="" class="brand-logo center">@Model.Title</a>
      <ul class="left">
         @if (!string.IsNullOrEmpty(Model.ReturnUrl))
         {
            <li>
               <a href="@Model.ReturnUrl" class="waves-effect waves-light">
                  <i class="material-icons">arrow_back</i>
               </a>
            </li>
         }
      </ul>
      <ul class="right">
         @if (!string.IsNullOrEmpty(Model.EditUrl))
         {
            <li><a href="#@Model.EditUrl" class="secondary-content modal-trigger white-text"><i class="material-icons">edit</i></a></li>
         }
         @if (!string.IsNullOrEmpty(Model.DeleteUrl))
         {
            <li><a href="#@Model.DeleteUrl" class="secondary-content modal-trigger white-text"><i class="material-icons">delete</i></a></li>
         }
      </ul>
   </div>
</nav>