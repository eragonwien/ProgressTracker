@model ProgressTracker.Models.Ptobjective
@using Microsoft.AspNetCore.Http.Extensions;
@using SNGCommon.Resources
<div class="box modal-container objective-container">
    <article class="media">
        <form method="post" data-id="@Model.Id" class="media-left">
            <input asp-for="IsCompleted" onclick="onCheckboxChanged(this)" hidden />
            <span class="icon has-text-danger icon-checked @(!Model.IsCompleted ? "is-hidden" : "")" onclick="onClickCheckboxIcon(this)">
                <i class="fas fa-check"></i>
            </span>
            <span class="icon has-text-danger icon-unchecked @(Model.IsCompleted ? "is-hidden" : "")" onclick="onClickCheckboxIcon(this)">
                <i class="far fa-square"></i>
            </span>
        </form>
        <div class="media-content objective-description @(Model.IsCompleted ? "is-checked" : string.Empty)" onclick="onClickObjectiveDescription(this)">
            <div class="content">
                <div class="field">
                    <div class="control">
                        <input asp-for="Description" class="input is-static" />
                    </div>
                </div>
            </div>
        </div>

        <div class="media-right">
            <button type="button" class="button is-rounded save-button" onclick="onClickSaveObjectiveDescription(this)">
                <span class="icon has-text-success">
                    <i class="fas fa-save"></i>
                </span>
            </button>
        </div>
    </article>
</div>
